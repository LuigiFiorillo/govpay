<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>govpay</artifactId>
		<groupId>it.govpay</groupId>
		<version>1.0b2</version>
	</parent>

	<artifactId>govpay-ear</artifactId>
	<packaging>ear</packaging>
	<name>GovPAY EAR module</name>


	<profiles>
		<profile>
			<id>extProps</id>
			<properties>
				<resourceToExclude>properties/*</resourceToExclude>
			</properties>
		</profile>
		<profile>
			<id>intProps</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<resourceToExclude></resourceToExclude>
			</properties>
		</profile>


	</profiles>

	<dependencies>

		<!-- Depend on the ejb module and war so that we can package them -->
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-web</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-web</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-pub-web</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-pub-web</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-ndp-web</artifactId>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-ndp-web</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-ejb</artifactId>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-ndp</artifactId>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>it.govpay</groupId>
			<artifactId>govpay-web-console</artifactId>
			<type>war</type>
		</dependency>
	</dependencies>

	<build>
		<finalName>govpay</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.3.1</version>
				<executions>
					<execution>
						<id>enforce-property</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireProperty>
									<property>env</property>
									<message>----------------------------------------------------
										------------------ Attenzione !!! ------------------
										----------------------------------------------------
										Deve essere fornita la proprieta 'env' che definisce
										il filtro da utilizzare per le properties
										./resources/filters/${env}.filter.properties</message>
								</requireProperty>
							</rules>
							<fail>true</fail>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.9.1</version>
				<configuration>
					<filtering>true</filtering>
					<filters>
						<filter>${basedir}/../resources/filters/${env}.filter.properties</filter>
					</filters>
					<version>6</version>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<earSourceExcludes>${resourceToExclude}</earSourceExcludes>
					<skinnyWars>true</skinnyWars>
					<modules>
						<webModule>
							<groupId>it.govpay</groupId>
							<artifactId>govpay-web</artifactId>
							<contextRoot>/govpay</contextRoot>
						</webModule>
						<webModule>
							<groupId>it.govpay</groupId>
							<artifactId>govpay-ndp-web</artifactId>
							<contextRoot>/govpay-ndp</contextRoot>
						</webModule>
						<webModule>
							<groupId>it.govpay</groupId>
							<artifactId>govpay-web-console</artifactId>
							<contextRoot>/govpayConsole</contextRoot>
						</webModule>
						<webModule>
							<groupId>it.govpay</groupId>
							<artifactId>govpay-pub-web</artifactId>
							<contextRoot>/govpay-pub</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.jboss.as.plugins</groupId>
				<artifactId>jboss-as-maven-plugin</artifactId>
				<configuration>
        	        		<hostname>localhost</hostname>
				        <port>9999</port>
					<skip>false</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
