<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
	<Appenders>
	
		<File name="govpay" fileName="${it.govpay.log.folder}/govpay.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %C:%L | %X{op} | %msg%n" />
		</File>
		
		<File name="govpay_orm" fileName="${it.govpay.log.folder}/govpay_orm.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %C:%L | %X{op} | %msg%n" />
		</File>
		
		<File name="govpay_bd" fileName="${it.govpay.log.folder}/govpay_orm.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %C:%L | %X{op} | %msg%n" />
		</File>
		
		<File name="STDOUT" fileName="${it.govpay.log.folder}/govpay_root.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %C:%L | %msg%n" />
		</File>
	</Appenders>
	
	<Loggers>
		<Logger name="it.govpay.orm" level="${it.govpay.log.level}" additivity="false">
			<AppenderRef ref="govpay_orm" />
		</Logger>
		
		<Logger name="it.govpay.bd" level="${it.govpay.log.level}" additivity="false">
			<AppenderRef ref="govpay_bd" />
		</Logger>
		
		<Logger name="it.govpay" level="${it.govpay.log.level}" additivity="false">
			<AppenderRef ref="govpay" />
		</Logger>
		
		<Logger name="org.apache.cxf.service.factory.ReflectionServiceFactoryBean" level="${it.govpay.log.level}" additivity="false">
			<AppenderRef ref="govpay" />
		</Logger>
		
		<Root level="${it.govpay.log.level}">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
