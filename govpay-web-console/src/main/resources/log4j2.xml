<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>
<Configuration>
	<Appenders>
	
		<File name="govpay" fileName="${log.folder}/govpay-console.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %C:%L | %X{op} | %X{cmd}  %msg%n" />
		</File>
		
		<File name="govpay_orm" fileName="${log.folder}/govpay-console_orm.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %C:%L | %X{op} | %X{cmd} %msg%n" />
		</File>
		
		<File name="STDOUT" fileName="${log.folder}/govpay_root.log" append="true">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-5.5p | %C:%L | %msg%n" />
		</File>
	</Appenders>
	
	<Loggers>
		<Logger name="it.govpay" level="${log.level}" additivity="false">
			<AppenderRef ref="govpay" />
		</Logger>
		
		<Logger name="it.govpay.orm" level="${log.level}" additivity="false">
			<AppenderRef ref="govpay_orm" />
		</Logger>

		<Root level="${log.level}">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
</Configuration>
